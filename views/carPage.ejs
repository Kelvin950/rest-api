      <%- include('navbar.ejs') %>
        
       <div class="brand">
         <img src="/img/racing-car-with-side-skirts.png" alt="" width="50px" />  <%=car.make%> <%=car.model%> <%=car.year%>
       </div>
       <p class="linebreak"></p>
     <section class="section-1">

        <div class="row ">

            <div class="col-md-9">
                <div class="card" style="width:700px ;box-shadow: 0 2px 8px rgba(0, 0, 0, 0.26);">
                    <img src="/<%=car.headPic%>">
                    <div class="card-body">
                      <h4 class="card-model"><%=car.model%></h4>
                      <p class="card-make"><%=car.make%></p>
                      <p class="price">GHC<%=car.price%></p>
                      <a href="#" class="link-primary">Watch Video</a>
                    </div>
                  </div>
            </div>

            <div class="col-md-3 member">
                <p> <img src="/img/engine.png" alt="" width="40px" />Engine Capacity: <%=car.specification.engineCapacity%> </p>
                <p> <img src="/img/energy (1).png" alt="" width="40px" /> Horse Power: <%=car.specification.horsepower%></p>
                <p><i class="fas fa-gas-pump"></i>FuelType: <%=car.specification.fueltype%></p>
                <p> <img src="/img/engineering.png" alt="" width="40px" />Transmission: <%=car.specification.transmission%> </p>
                <p> <img src="/img/engine.png" alt="" width="40px" />Engine type: <%=car.specification.enginetype%></p>
                <p>  <img src="/img/car-seat.png" alt="" width="40px" />Seating: <%=car.specification.seating%></p>
            </div>
        </div>
     </section>
     <p class="linebreak"></p>

     <section class="section-2">
          <div class="description">
         
            <p>
              <%=car.description%>
            </p>
                   <div id="demo" class="carousel slide" data-bs-ride="carousel">

            <!-- Indicators/dots -->
            <div class="carousel-indicators">
               
             <% for([key,value] in otherImages){%>
                    
                 <%if(key==0){%>
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="<%=key%>" class="active indicator"></button>
                    <%}else{%>
              <button type="button" data-bs-target="#demo" data-bs-slide-to="<%=key%>" class="indicator"></button>
                   <%}%>
                   <% }%>
              
            </div>
          
            <!-- The slideshow/carousel -->
            
            <div class="carousel-inner">
                <% for([key ,value] in otherImages){%>
                    <%if(key==0){%>
              <div class="carousel-item active image">
                <img src="/<%=otherImages[key]%>" alt="Los Angeles" class="d-block w-100">
                
              </div>
              <%}else{%>
                <div class="carousel-item  image">
                    <img src="/<%=otherImages[key]%>" alt="Los Angeles" class="d-block w-100">
                    
                  </div>
                  <%}%>
              <%}%>
            </div>
                 
            <!-- Left and right controls/icons -->
            <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
              <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
              <span class="carousel-control-next-icon"></span>
            </button>
          </div>
     </section>
     <%- include('footer.ejs') %>
